@model Users

<h2>Create a New Users</h2>

@using (Html.BeginForm("InsertUsersToDatabase", "Users", "Post"))
{
    <input asp-for="MID" type="hidden" value="" />

    <label asp-for="Fname" class="control-label">Fname</label>
    <input type="text" name="Fname" class="form-control" value="" />

    <label asp-for="Lname" class="control-label">Lname</label>
    <input type="text" name="Lname" class="form-control" value="" />

    <label asp-for="MID" class="control-label">MID</label>
    <input type="number" step="0.01" name="MID" class="form-control" />

    <label asp-for="Gender" class="control-label">Gender</label>
    <input type="text" name="Gender" class="form-control" value="" />

    <label asp-for="Dob" class="control-label">Dob</label>
    <input type="text" name="Dob" class="form-control" value="" />

    <label asp-for="Mobile" class="control-label">Mobile</label>
    <input type="number" name="Mobile" class="form-control" />

    <label asp-for="Email" class="control-label">Email</label>
    <input type="text" name="Email" class="form-control" value="" />

    <label asp-for="JoinDate" class="control-label">JoinDate</label>
    <input type="text" name="JoinDate" class="form-control" value="" />

    <label asp-for="Maddress" class="control-label">Maddress</label>
    <input type="text" name="Maddress" class="form-control" value="" />

    <label asp-for="MembershipPeriod" class="control-label">MembershipPeriod</label>
    <input type="text" name="MembershipPeriod" class="form-control" value="" />

    <div class="form-group">
        <label for="">Select a MID</label>
        <select class="form-control" name="CategoryID" value="">
            @foreach (var cat in Model.MIDs)
            {
                <option value="@cat.MID">@cat.Fname @cat.Lname @cat.Gender @cat.Dob @cat.Mobile @cat.Mobile @cat.Email @cat.JoinDate @cat.Maddress @cat.MembershipPeriod</option>
            }
        </select>
    </div>

    <input type="submit" value="Create Users" class="btn btn-primary" />
}